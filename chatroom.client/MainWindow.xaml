<Window x:Class="chatroom.client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="400" Width="500">
    <Grid>
        <DockPanel>
            <DockPanel DockPanel.Dock="Top" Height="300" LastChildFill="True" >
                <TextBlock x:Name="m_output"></TextBlock>
            </DockPanel>
            <DockPanel DockPanel.Dock="Top" Height="50">
                <Button x:Name="b_start" Width="250" Content="Send" Click="BeginToSend"></Button>
                <Button x:Name="b_stop" Content="end" IsEnabled="False" Click="EndToSend"></Button>
            </DockPanel>
        </DockPanel>
    </Grid>
</Window>
